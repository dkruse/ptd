<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:orientation="vertical">
 <LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
  	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:text="@string/line_name" />
	<EditText android:id="@+android:id/line_name"
		android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
		android:layout_weight="1" />
 </LinearLayout>
 <LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
  	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:text="@string/line_start" />
	<EditText android:id="@+android:id/line_start"
		android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
		android:layout_weight="1" />
 </LinearLayout> 
 <LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
  	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:text="@string/line_end" />
	<EditText android:id="@+android:id/line_end"
		android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
		android:layout_weight="1" />
 </LinearLayout>
 <Button android:id="@+android:id/confirm" 
	  android:text="@string/confirm"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" />  
</LinearLayout>
